{
  "name": "Search Elsewhere",
  "description": "Performs the current search query in a different engine.",
  "version": "0.1",
  "browser_action": {
      "default_title": "Search Elsewhere",
      "default_icon": "binocs.png",
      "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],	  
	  "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"],
  "manifest_version": 2
}
